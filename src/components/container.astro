---
const { maxWidth = '1080px' } = Astro.props;
---

<div class="container">
	<slot />
</div>

<style define:vars={{ maxWidth }}>
	@layer layout {
		.container {
			max-width: var(--maxWidth);
			margin-inline: auto;
			padding-inline: 1em;
		}
		.container .container {
			padding-inline: 0;
		}
	}
</style>
